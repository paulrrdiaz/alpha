@require '../../_config/*'
@require '../../_mixins/*'

body
	font-size $basefont
	font-family $futuraBtMedium
	background $bg
	color $blue_01
#wrapper
	position relative
.wrapper_center
	position relative
	margin 0 auto
	width $wrapperWidth
p
	em(17px)
	line-height 1.27em
.clear
	clear both
.hide
	display none
.icon
	font-family "icons"
	display inline-block
	vertical-align middle
	line-height 1
	font-weight normal
	font-style normal
	speak none
	text-decoration inherit
	text-transform none